{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@smartabp/lowcode-core": ["packages/lowcode-core/src/index.ts"],
      "@smartabp/lowcode-core/*": ["packages/lowcode-core/src/*"],
      "@smartabp/lowcode-designer": ["packages/lowcode-designer/src/index.ts"],
      "@smartabp/lowcode-designer/*": ["packages/lowcode-designer/src/*"],
      "@smartabp/lowcode-ui-vue": ["packages/lowcode-ui-vue/src/index.ts"],
      "@smartabp/lowcode-ui-vue/*": ["packages/lowcode-ui-vue/src/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.js",
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.d.ts",
    "packages/**/src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/views/CodeGenerator/**",
    "src/lowcode-entry.ts",
    "packages/**/__tests__/**",
    "packages/**/tests/**",
    "packages/lowcode-designer/src/components/UIPatterns/**",
    "packages/lowcode-designer/src/components/ValidationRules/**",
    "packages/lowcode-designer/src/views/designer/CollaborationPanel.vue",
    "packages/lowcode-designer/src/views/designer/PerformanceMonitor.vue",
    "packages/lowcode-designer/src/views/designer/VersionControlPanel.vue",
    "packages/lowcode-designer/src/components/RelationshipDiagram/**",
    "packages/lowcode-designer/src/components/UIGenerator/**"
  ]
}

